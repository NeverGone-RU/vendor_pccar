<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <!-- Google location > AOSP location -->
    <string-array name="config_locationProviderPackageNames" translatable="false">
        <item>com.google.android.gms</item>
        <item>com.android.location.fused</item>
    </string-array>

    <!-- This is an in-dash device â€” we don't want different volume levels -->
    <bool name="config_useMasterVolume">true</bool>
    <bool name="config_useVolumeKeySounds">false</bool>

    <!-- Fading marquees removes incorrect abbreviations throughout the UI -->
    <bool name="config_ui_enableFadingMarquee">true</bool>

    <!-- There's no point to rotate the screen with fixed installations -->
    <bool name="config_supportAutoRotation">false</bool>
    <bool name="config_forceDefaultOrientation">true</bool>

    <!-- Added text makes buttons a bit bigger and easier to press -->
    <bool name="config_allowActionMenuItemTextWithIcon">true</bool>

    <!-- I can't see a valid use case for Dreams yet. -->
    <bool name="config_dreamsSupported">false</bool>

    <!-- Safe volume is for pussies -->
    <bool name="config_safe_media_volume_enabled">false</bool>

    <!-- Disable MultiUser support for now -->
    <bool name="config_enableMultiUserUI">false</bool>

    <!-- WiFi display is unusable with our configurations -->
    <bool name="config_enableWifiDisplay">false</bool>
</resources>

